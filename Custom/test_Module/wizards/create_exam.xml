<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="create_exam_form" model="ir.ui.view">
        <field name="name">create_exam_wizard</field>
        <field name="model">create.exam</field>
        <field name="arch" type="xml">
            <form string="Create Exam">
                <group>
                    <field name="student_exam_id"/>
                    <field name="create_exam_id"/>
                    <field name="exam_bnao"/>
                    <field name="total_marks"/>
                </group>
                <footer>
                    <button name="button_exam" string="Create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>